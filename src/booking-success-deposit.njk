<section class="success-page">
    <div class="container">
        <div class="success-box">
            <div class="success-icon">✓</div>
            <h1>Payment Successful!</h1>
            <p>Your $200 deposit has been received.</p>
            
            <div class="next-step">
                <h2>Next Step: Book Your Session</h2>
                <p>Click below to pick your tattoo session time.</p>
                <div class="session-buttons" id="session-buttons">
                    <!-- Will be populated by JavaScript based on session type -->
                </div>
            </div>

            <div class="success-info">
                <h3>Before Your Appointment</h3>
                <ul>
                    <li>Get a good night's sleep</li>
                    <li>Eat a solid meal beforehand</li>
                    <li>Stay hydrated</li>
                    <li>No alcohol 24 hours before</li>
                    <li>Wear comfortable, loose clothing</li>
                </ul>
            </div>

            <p class="success-note">Questions? Reach out at <a href="mailto:info@getinkedbyj.com">info@getinkedbyj.com</a></p>
        </div>
    </div>
</section>

<style>
.success-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--dark);
    padding: 8rem 0;
}

.success-box {
    text-align: center;
    background: var(--gray);
    padding: 3rem;
    max-width: 600px;
}

.success-icon {
    width: 80px;
    height: 80px;
    background: var(--accent);
    color: var(--black);
    font-size: 3rem;
    font-weight: bold;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
}

.success-box h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
}

.success-box > p {
    color: var(--cream);
    font-size: 1.1rem;
    margin-bottom: 2rem;
}

.next-step {
    background: var(--dark);
    padding: 2rem;
    margin: 2rem 0;
    border: 2px solid var(--accent);
}

.next-step h2 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--accent);
}

.next-step p {
    color: var(--cream);
    margin-bottom: 1.5rem;
}

.session-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.success-info {
    text-align: left;
    margin: 2rem 0;
    padding: 1.5rem;
    background: var(--dark);
}

.success-info h3 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
}

.success-info ul {
    list-style: none;
    color: var(--cream);
}

.success-info li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
}

.success-info li::before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--accent);
}

.success-note {
    color: var(--cream);
    opacity: 0.7;
    font-size: 0.9rem;
    margin-top: 2rem;
}

.success-note a {
    color: var(--accent);
}
</style>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const urlParams = new URLSearchParams(window.location.search);
    const sessionType = urlParams.get('session') || 'small';
    
    const calendlyUrls = {
        small: 'https://calendly.com/jaylen-getinkedbyj/small-session-2-3-hrs',
        medium: 'https://calendly.com/jaylen-getinkedbyj/medium-session-4-6-hours',
        fullday: 'https://calendly.com/jaylen-getinkedbyj/full-day-session-6-7-hours'
    };
    
    const sessionNames = {
        small: 'Small Session (2-3 hours)',
        medium: 'Medium Session (4-6 hours)',
        fullday: 'Full Day Session (6-7 hours)'
    };
    
    const buttonsContainer = document.getElementById('session-buttons');
    const url = calendlyUrls[sessionType] || calendlyUrls.small;
    const name = sessionNames[sessionType] || sessionNames.small;
    
    buttonsContainer.innerHTML = `
        <a href="${url}" class="btn btn-primary" target="_blank">Book ${name}</a>
    `;
});
</script>
