---
layout: base.njk
---

<header class="page-header">
    <div class="container">
        <span class="section-tag">Blog</span>
        <h1>{{ title }}</h1>
        <p>{{ date | dateFormat }}</p>
    </div>
</header>

<section class="blog-post-content" style="background: var(--dark);">
    <div class="container">
        <article class="blog-post">
            {% if thumbnail %}
            <img src="{{ thumbnail }}" alt="{{ title }}" class="blog-post-image">
            {% endif %}
            <div class="blog-post-body">
                {{ content | safe }}
            </div>
            <div class="blog-post-footer">
                <a href="/blog/" class="btn btn-secondary">‚Üê Back to Blog</a>
            </div>
        </article>
    </div>
</section>

<section class="cta">
    <div class="container">
        <h2 class="section-title">Ready to Get Inked?</h2>
        <p>Let's create something you'll love.</p>
        <a href="/book/" class="btn btn-primary">Book Your Session</a>
    </div>
</section>
