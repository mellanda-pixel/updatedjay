</header>

<section class="book-content">
    <div class="container">
        
        <!-- Client Type Toggle -->
        <div class="client-toggle">
            <button class="toggle-btn active" data-client="new">Book Consult</button>
            <button class="toggle-btn" data-client="returning">Book Appointment</button>
        </div>

        <!-- New Client Section -->
