<style>
/* Client Toggle */
.client-toggle {
    display: flex;
    justify-content: center;
    gap: 0;
    margin-bottom: 3rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
}

.toggle-btn {
    flex: 1;
    padding: 1.25rem 2rem;
    background: var(--gray);
    border: 2px solid var(--light-gray);
    color: var(--cream);
    font-family: var(--font-display);
    font-size: 1.2rem;
    letter-spacing: 0.1em;
    cursor: pointer;
    transition: all 0.3s;
}

.toggle-btn:first-child {
    border-radius: 4px 0 0 4px;
    border-right: none;
}

.toggle-btn:last-child {
    border-radius: 0 4px 4px 0;
}

.toggle-btn:hover {
    background: var(--light-gray);
}

.toggle-btn.active {
    background: var(--accent);
    border-color: var(--accent);
    color: var(--black);
}

/* Client Sections */
.client-section {
    display: none;
}

.client-section.active {
    display: block;
}

/* Consultation Note */
.consultation-note {
    background: var(--gray);
    padding: 1.5rem;
    border-left: 4px solid var(--accent);
    margin-top: 2rem;
}

.consultation-note p {
    margin: 0;
    font-size: 0.95rem;
    color: var(--cream);
}

/* Form Note */
.form-note {
    text-align: center;
    color: var(--cream);
    opacity: 0.7;
    font-size: 0.85rem;
    margin-top: 1rem;
}
</style>

<script>
// Toggle between new and returning client
document.addEventListener('DOMContentLoaded', function() {
    const toggleBtns = document.querySelectorAll('.toggle-btn');
    const clientSections = document.querySelectorAll('.client-section');
    
    toggleBtns.forEach(btn => {
        btn.addEventListener('click', () => {
            // Update active button
            toggleBtns.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            
            // Show correct section
            const clientType = btn.dataset.client;
            clientSections.forEach(section => {
                section.classList.remove('active');
                if (section.id === clientType + '-client') {
                    section.classList.add('active');
                }
            });
        });
    });

    // Handle consultation form submission
    document.getElementById('consultation-form').addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Save form data to localStorage for reference
        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());
        localStorage.setItem('consultationData', JSON.stringify(data));
        
        // Submit to Netlify Forms
        fetch('/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: new URLSearchParams(formData).toString()
        }).then(() => {
            // Redirect to Stripe checkout for consultation
            window.location.href = '/checkout/consultation/';
        }).catch(error => {
            console.error('Error:', error);
            alert('Something went wrong. Please try again.');
        });
    });

    // Handle deposit form submission
    document.getElementById('deposit-form').addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Save form data and session type
        const formData = new FormData(this);
        const data = Object.fromEntries(formData.entries());
        localStorage.setItem('depositData', JSON.stringify(data));
        
        // Submit to Netlify Forms
        fetch('/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: new URLSearchParams(formData).toString()
        }).then(() => {
            // Redirect to Stripe checkout for deposit with session type
            const sessionType = data.sessionType;
            window.location.href = '/checkout/deposit/?session=' + sessionType;
        }).catch(error => {
            console.error('Error:', error);
            alert('Something went wrong. Please try again.');
        });
    });
});
</script>
